{
    "name": "dekanat-app",
    "version": "0.1.0",
    "private": true,
    "workspaces": [
        "gui",
        "backend",
        "database",
        "dekanat-app-plugin"
    ],
    "scripts": {
        "build": "npm run build-core && npm run build-db && npm run build-gui",
        "build-core": "cd src/backend/startup && tsc && cd ../dekanat-app-plugin && tsc && cd ../../..",
        "build-db": "cd database/ && docker-compose build --pull && cd ..",
        "build-gui": "npm run build -w gui",
        "start": "concurrently --kill-others \"npm:start-*\"",
        "start-core": "node ./src/backend/startup/dist/core",
        "start-db": "cd database/ && docker-compose up && cd ..",
        "start-gui": "npm run start -w gui",
        "dev": "npm run build-core && npm run build-db && concurrently --kill-others \"npm:dev-*\"",
        "dev-core": "node ./src/backend/startup/dist/core dev",
        "dev-db": "cd database/ && docker-compose up && cd ..",
        "dev-gui": "npm run dev -w gui",
        "lint": "npm run lint -w gui",
        "lint:fix": "npm run lint:fix -w gui",
        "lint:production": "npm run lint:production -w gui",
        "analyze": "npm run analyze -w gui",
        "test": "npm run test --workspaces --if-present",
        "reset-db": "cd database/ && docker-compose down && cd .. && docker volume rm database_db-data"
    },
    "dependencies": {
        "@intutable/core": "^0.1.6",
        "@intutable/database": "^1.3.0",
        "@intutable/http": "^0.1.5",
        "@intutable/http-cors": "^0.1.0",
        "@intutable/lazy-views": "^4.1.0-single-connection",
        "@intutable/project-management": "0.4.10",
        "@intutable/user-authentication": "^0.1.3",
        "typescript": "^4.6.3",
        "concurrently": "^7.3.0"
    },
    "devDependencies": {
        "jest": "^27.1.4",
        "ts-jest": "^27.1.4",
        "@types/jest": "^27.4.1",
        "@typescript-eslint/eslint-plugin": "^5.10.2",
        "prettier": "^2.5.1",
        "eslint": "^8.18.0",
        "eslint-config-next": "12.1.5",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.28.0",
        "cross-env": "^7.0.3"
    }
}
