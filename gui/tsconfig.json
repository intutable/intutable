{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": "./src",
        "paths": {
            "@backend/*": ["../../dekanat-app-plugin/dist/*"],
            "@datagrid/*": ["components/DataGrid/*"]
        }
    },
    "include": ["src", "next-env.d.ts"],
    "exclude": [
        "node_modules",
        "backend",
        "src/backend",
        "database",
        "**/__tests/**/*.test.ts"
    ]
}
