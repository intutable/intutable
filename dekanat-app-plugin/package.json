{
    "name": "dekanat-app-plugin",
    "version": "0.1.0",
    "description": "A core plugin for maintaining dekanat-app's data structures and abstractions",
    "private": true,
    "main": "./dist/index.js",
    "scripts": {
        "build": "tsc --build --force",
        "test": "docker-compose up -d && npm run build && npx jest; docker-compose down --volumes",
        "build:db": "docker-compose build --pull",
        "lint": "cross-env NODE_ENV=development eslint src",
        "lint:fix": "npm run lint -- --fix",
        "lint:production": "cross-env NODE_ENV=production eslint src"
    },
    "dependencies": {
        "@intutable/core": "^0.1.6",
        "@intutable/database": "^4.0.0",
        "@intutable/http": "^0.2.0",
        "@intutable/http-cors": "^0.1.0",
        "@intutable/lazy-views": "^7.0.0",
        "@intutable/project-management": "^3.0.0",
        "@intutable/user-authentication": "^3.0.0"
    }
}
